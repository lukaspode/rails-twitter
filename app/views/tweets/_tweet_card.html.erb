<div class="w-[36.5rem] flex flex-row gap-[0.625rem] px-4 h-auto border-b-2 border-dark-200">
  <div class="flex flex-col">
    <%= image_tag "profile_picture", class: "rounded-full w-10 h-10 mr-3" %>
  </div>

  <div class="flex flex-col w-full pb-2">
    <div class="flex gap-1 pb-1 items-center">
      <h3 class="heading-5 font-bold"><%= @user.name %></h3>
      <p class="text-dark-400">@<%= @user.username %><p>
      <p class="text-dark-400"><%= time_ago_in_words(tweet.created_at)%></p>
    </div>

    <div class="flex items-start">
      <p class="text-dark-900"><%= tweet.content %><p>
    </div>

    <div class="flex items-start py-[0.62rem]">
      <p>* * MEDIA CONTENT * *<p>
    </div>

    <nav class="flex w-full items-start py-1">
      <div class="flex w-full items-center">
        <%= link_to "", class: "flex flex-row gap-2 p-2 hover:bg-dark-200 rounded-full ease-in duration-100" do %>
          <%= image_tag "comment_icon" %>
          <p>11</p>
        <% end %>
      </div>
      <div class="flex w-full items-center">
        <%= link_to "", class: "flex flex-row gap-2 p-2 hover:bg-dark-200 rounded-full ease-in duration-100" do %>
          <%= image_tag "retweet_icon" %>
          <p>3</p>
        <% end %>
      </div>
      <div class="flex w-full items-center">
        <%= link_to "", class: "flex flex-row gap-2 p-2 hover:bg-dark-200 rounded-full ease-in duration-100" do %>
          <%= image_tag "like_icon" %>
          <p>9</p>
        <% end %>
      </div>
      <div class="flex w-full items-center">
        <%= link_to "", class: "flex flex-row gap-2 p-2 hover:bg-dark-200 rounded-full ease-in duration-100" do %>
          <%= image_tag "share_icon" %>
          <p>12</p>
        <% end %>
      </div>
    </nav>
  </div>
</div>

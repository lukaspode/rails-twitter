<% @tweets.each do |tweet| %>
  <%= turbo_stream.append "tweets", partial: "users/tweets/tweet_card", locals: { tweet: } %>
<% end %>

<%= turbo_stream.replace :pagination do %>
  <% if @pagy.next.present? %>
    <%= turbo_frame_tag :pagination, loading: :lazy, src: feed_index_path(format: :turbo_stream, page: @pagy.next) %>
  <% end %>
<% end %>

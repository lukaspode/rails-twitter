<div class="w-full flex p-3">
  <div class="flex-col w-10 mr-3">
  <%= image_tag "profile_picture", class: "profile-picture-sm" %>
  </div>

  <div class="flex-col w-full">
    <div class="flex justify-between">
      <div>
        <p><%= user.name %></p>
        <p>@<%= user.username %></p>
      </div>
      <% if current_user %>
        <% if user.following? %>
          <%= link_to "Unfollow", follow_user_path(user), class: "btn btn-md btn-secondary sm:w-28 w-24 mt-2.5", data: { turbo_method: "post" } %>
        <% else %>
          <%= link_to "Follow", follow_user_path(user), class: "btn btn-md btn-secondary sm:w-28 w-24 mt-2.5", data: { turbo_method: "post" } %>
        <% end %>
      <% end %>
    </div>

    <div class="pt-1">
      <p><%= user.bio %></p>
    </div>
  </div>
</div>

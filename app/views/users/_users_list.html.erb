<div class="flex p-3 w-full sm:w-[36.5rem]">
  <div class="flex-col w-10 mr-3">
  <%= image_tag "profile_picture", class: "profile-picture-sm" %>
  </div>

  <div class="flex-col w-full">
    <div class="flex justify-between">
      <div>
        <p class="name-text"><%= user.name %></p>
        <p class="username-text">@<%= user.username %></p>
      </div>
      <% if current_user %>
        <% if user.following.present? and user.following? %>
          <%= link_to "Following", follow_user_path(user), class: "btn btn-md btn-white w-24", data: { turbo_method: "post" } %>
        <% elsif user.following.present? and not user.following? %>
          <%= link_to "Follow", follow_user_path(user), class: "btn btn-md btn-dark w-24", data: { turbo_method: "post" } %>
        <% else %>
          <%= link_to "Me", current_user, class: "btn btn-md btn-secondary w-24" %>
        <% end %>
      <% end %>
    </div>

    <div class="pt-1">
      <p class="text-dark-900 text-base"><%= user.bio %></p>
    </div>
  </div>
</div>

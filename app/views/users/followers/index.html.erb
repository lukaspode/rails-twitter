<div class="flex flex-row justify-center w-full h-screen ">
  <%= render "users/sidemenu", object: current_user %>

  <div class="flex flex-col items-start sm:w-[37.5rem] w-full overflow-auto">
    <%= render "users/header_profile", object: @user %>
    <div class="w-full p-3 border-b-2">
      <h2 class="heading-4">Followers</h2>
    </div>
    <div class="flex flex-col mt-2 gap-2 mx-auto items-start sm:w-[37.5rem] w-full overflow-auto">
      <% @followers.each do |user| %>
          <%= render "users/users_list", user: %>
      <% end %>
    </div>
  </div>

  <div class="flex-col lg:block hidden shrink-0 w-[22rem] ml-7 bg-red-50">
    <%# sidecolumn %>
  </div>
</div>

<% @tweets.each do |tweet| %>
  <%= turbo_stream.append "tweets_profile", partial: "users/tweets/tweet_card", locals: { tweet: } %>
<% end %>

<%= turbo_stream.replace :pagination_profile do %>
  <% if @pagy.next.present? %>
    <%= turbo_frame_tag :pagination_profile, loading: :lazy, src: user_path(@user, format: :turbo_stream, page: @pagy.next) %>
  <% end %>
<% end %>
